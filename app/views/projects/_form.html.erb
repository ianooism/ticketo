<%= form_for(project) do |f| %>
  <% if project.errors.any? %>
    <div>
      <h2>
        <%= pluralize(project.errors.count, "error") %>
            prevented this project from being saved:
      </h2>
      
      <ul>
        <% project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
