<div>
  Name:
  <%= ticket.name %>
</div>

<div>
  Description:
  <%= ticket.description %>
</div>

<div>
  Project:
  <%= ticket.project.name %>
</div>

<div>
  Owner:
  <%= ticket.owner.email %>
</div>

<div>
  State:
  <%= ticket.state.name %>
</div>

<div>
  Tags:
  <% if ticket.tags.empty? %>
    none
  <% else %>
    <% ticket.tags.each_with_index do |tag, index| %>
      <%= link_to tag.name, '#' %>
      <%= ' | ' unless index == ticket.tags.size-1 %>
    <% end %>
  <% end %>
</div>
